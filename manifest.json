{
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "sage-like@webExtension.arielg.il",
      "strict_min_version": "56.0"
    }
  },
  "name": "Sage-Like",
  "version": "1.0",
  "description": "A basic RSS reader like the good ol' Sage addon.",
  "author": "arielg",

  "permissions": [
    "bookmarks",
    "history",
    "<all_urls>",
    "activeTab",
    "menus",
    "notifications",
    "clipboardWrite",
    "storage"
  ],

  "icons": {
    "16": "icons/sageLike-16.png",
    "32": "icons/sageLike-32.png",
    "48": "icons/sageLike-48.png"
  },

  "web_accessible_resources": [
    "icons/sageLike-32.png"
  ],

  "browser_action": {
    "browser_style": true,
    "default_title": "Sage-Like",
    "default_icon": {
      "16": "icons/sageLike-16.png",
      "32": "icons/sageLike-32.png",
      "48": "icons/sageLike-48.png"
    }
  },

  "sidebar_action": {
    "browser_style": true,
    "default_title": "Sage-Like",
    "default_panel": "sidebar/panel.html",
    "default_icon": {
      "16": "icons/sageLike-16.png",
      "32": "icons/sageLike-32.png",
      "48": "icons/sageLike-48.png"
    }
  },

  "commands": {
    "kb-open-sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Open Sage-Like Sidebar"
    }
  },

  "background": {
    "scripts": ["common.js", "background.js"]
  }
}
